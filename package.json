{
	"name": "kairox",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"hono": "^4.8.2",
			"@orpc/server": "^1.13.1",
			"@orpc/openapi": "^1.13.1",
			"@orpc/zod": "^1.13.1",
			"better-auth": "^1.4.9",
			"@orpc/client": "^1.13.1",
			"pino": "^10.1.0",
			"@orpc/experimental-pino": "^1.13.1"
		}
	},
	"type": "module",
	"scripts": {
		"check": "oxlint --type-aware && oxfmt --write",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @kairox/db db:push",
		"db:studio": "turbo -F @kairox/db db:studio",
		"db:generate": "turbo -F @kairox/db db:generate",
		"db:migrate": "turbo -F @kairox/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"oxfmt": "^0.20.0",
		"oxlint": "^1.35.0",
		"oxlint-tsgolint": "^0.10.0",
		"pino-pretty": "^13.1.3",
		"turbo": "^2.7.2",
		"typescript": "^5.9.3"
	},
	"packageManager": "bun@1.3.3"
}
