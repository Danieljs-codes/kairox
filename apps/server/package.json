{
	"name": "server",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "cd ../.. && bun --env-file=./apps/server/.env run --hot apps/server/src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"@kairox/api": "workspace:*",
		"@kairox/auth": "workspace:*",
		"@kairox/db": "workspace:*",
		"@orpc/experimental-pino": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/zod": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"pino": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@kairox/config": "workspace:*",
		"@types/bun": "catalog:",
		"tsdown": "^0.16.5",
		"typescript": "catalog:"
	}
}
